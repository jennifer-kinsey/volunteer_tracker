<h1>All My Projects</h1>
<hr>
<h2>Create a new project:</h2>
<form action='/projects' method='post'>
  <label for='project_name' name='project_name'>Project Name:</label>
  <input type='text' name='project_name' id='project_name'>
  <button type='submit' class='btn btn-default'>Add Project</button>
</form>
<hr>

<h2> Add volunteers to a project:</h2>
<form action='/volunteers' method='post'>
  <label for='project_id'>Select a Project</label>
  <select id='project_id' name='project_id' type='text'>
    <% @projects.each do |project| %>
    <option value='<%= project.id%>'> <%= project.project_name %> </option>
    <% end %>
  </select>
  <br>
  <label for='volunteer_name'>Name of Volunteer</label>
  <input id='volunteer_name' name='volunteer_name' type='text'>
  <button type='submit' class='btn btn-default'>Add</button>
</form>

<hr>
<h2>Your Current Projects:</h2>
<% if @projects.any? %>
  <h4>Click on links to see all project volunteers and modify your projects</h4>

  <% @projects.each do |project| %>
    <h5><a href='/projects/<%=project.id%>'><%=project.project_name%></a></h5>
  <% end %>
<% else %>
  <h5>There are no projects yet!</h5>
<% end %>
<hr>
