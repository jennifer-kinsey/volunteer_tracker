<h1>Update <%=@volunteer.volunteer_name %> </h1>
<hr>
<form action="/volunteers/<%= @volunteer.project_id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="volunteer_name">Updated Volunteer Name:</label>
  <input id="volunteer_name" name="volunteer_name" type="text">

  <button type="submit" class="btn btn-success" name="project_id" value="#{@volunteer.project_id}">Update</button>
</form>

<form action="/volunteers/<%= @volunteer.project_id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <br>
  <br>
  <label for="delete">Delete <%=@volunteer.volunteer_name %>:</label>
  <button type="submit" class="btn btn-danger">Delete volunteer</button>
</form>
