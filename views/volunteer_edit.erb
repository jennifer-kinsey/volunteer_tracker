<h1>Update <%=@volunteer.volunteer_name %> </h1>
<hr>
<form action="/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="volunteer_name">Update the volunteer name:</label>
  <input id="volunteer_name" name="volunteer_name" type="text">
  <button type="submit" class="btn btn-success">Update</button>
</form>
<br>
<br>
<form action="/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <label for="delete">Delete <%=@volunteer.volunteer_name %>:</label>
   <button type='submit' class='btn btn-danger'>Delete volunteer</button>
</form>
