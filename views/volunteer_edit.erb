  <label for="volunteer_name">Updated Volunteer Name:</label>
  <input id="volunteer_name" name="volunteer_name" type="text">

  <button type="submit" class="btn btn-success" name="project_id" value="#{@volunteer.project_id}">Update</button>
</form>
